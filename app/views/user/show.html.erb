<div class='container'>
  <h2><span class="glyphicon glyphicon-link" aria-hidden="true"></span>  Trips</h2>
  <div class='well'>
    <table class='table'>
      <% if @trips.count >= 1 %>
        <tr>
          <td>Driver</td>
          <td>Rider</td>
          <td>Pickup Location</td>
          <td>Final Destination</td>
        </tr>
        <% @trips.each do |trip| %>
          <td><%=trip.driver.first_name + " " + trip.driver.last_name%></td>
          <td><%=trip.rider.first_name + " " + trip.rider.last_name%></td>
          <td><%=trip.rider_origin_loc%></td>
          <td><%=trip.destination_loc%></td>
        <% end %>
      <% else %>
        <h4>No trips found</h4>
      <% end %>
    </table>
  </div>
</div>

<div class='container'>
  <h2><span class="glyphicon glyphicon-time" aria-hidden="true"></span>  Pending Requests</h2>
  <div class='well'>
  <table class='table'>
    <% if @requests.count >= 1 %>
      <tr>
          <td>Origin</td>
          <td>Destination</td>
          <td>Driver</td>
      </tr>
      <% @requests.each do |request| %>
        <td><%=request.origin_loc%></td>
        <td><%=request.destination_loc%></td>
        <td><%=request.driver ? "Yes" : "No"%></td>
      <% end %>
    <% else %>
      <h4>No requests found</h4>
    <% end %>


  </div>
</div>



