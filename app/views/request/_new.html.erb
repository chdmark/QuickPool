
<div id="request-form">
<h2>Submit a Carpool Request</h2>

<%= bootstrap_form_for :request, url: '/request' do |f| %>
  <%= f.text_field :origin_loc, label: "From Where?" %>
  <%= f.text_field :destination_loc, label: "To Where?" %>
  <%= f.select :driver, [["Yes", true], ["No", false]], label: "Are you driving?" %>
  <%= f.submit "Submit" %>
<% end %>
<a id='cancel'><p>Cancel</p></a>
</div>
